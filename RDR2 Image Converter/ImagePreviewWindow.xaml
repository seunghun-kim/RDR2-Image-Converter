<Window x:Class="RDR2_Image_Converter.ImagePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Preview" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Image Name="imgPreview" Stretch="Uniform" Height="350"/>
            <TextBlock Name="txtImageIndex" HorizontalAlignment="Center" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnPrev" Content="Prev" Click="btnPrev_Click" Margin="5"/>
                <Button Name="btnNext" Content="Next" Click="btnNext_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
